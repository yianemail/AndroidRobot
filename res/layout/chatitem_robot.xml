<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.shuPeng.ui.CircleImageView
        android:id="@+id/chatlist_image_other"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/test_mehead" />

    <TextView
        android:id="@+id/chatlist_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatlist_image_other"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/chatlist_image_other"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="TextView" />

    </RelativeLayout>

        
